<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/flMainContentView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/vBottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/vBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_page_menu_height"
        android:background="@color/white"
        app:elevation="@dimen/elevation_common"
        app:itemIconSize="@dimen/main_page_menu_icon_size"
        app:itemIconTint="@color/menu_icon_tint"
        app:itemTextAppearanceActive="@style/MenuText"
        app:itemTextAppearanceInactive="@style/MenuText"
        app:itemTextColor="@color/menu_text_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/activity_main" />

</androidx.constraintlayout.widget.ConstraintLayout>