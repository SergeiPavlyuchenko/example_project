<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flProgress"
    android:layout_width="@dimen/progress_view_size"
    android:layout_height="@dimen/progress_view_size"

    android:background="@drawable/bg_progressbar_base"
    android:elevation="@dimen/elevation_big">

    <ProgressBar
        android:id="@+id/pbProgress"
        android:layout_width="@dimen/progress_view_bar_size"
        android:layout_height="@dimen/progress_view_bar_size"
        android:layout_gravity="center"
        android:indeterminateTint="@color/black_to_rename" />

</FrameLayout>