<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llItemLanguageContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_language_height"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/item_language_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivItemLanguageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done_tinted" />

    <TextView
        android:id="@+id/tvItemLanguageText"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/item_language_margin_start"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text14RobotoRegularBlack"
        tools:text="Русский"/>
</LinearLayout>